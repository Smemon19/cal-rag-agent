# OpenAI API key
OPENAI_API_KEY=

# Vector storage backend: "chroma" (default) or "bigquery"
VECTOR_BACKEND=chroma

# Default ChromaDB collection used by both ingestion and UI (when using Chroma backend).
# If unset or blank, falls back to "docs_ibc_v2".
RAG_COLLECTION_NAME=docs_ibc_v2

# BigQuery configuration (when using BigQuery backend)
BQ_PROJECT=cal-rag-agent
BQ_DATASET=calrag
BQ_TABLE=documents

# Google Cloud authentication (required for BigQuery backend)
# Point this to your service account key JSON file
# Example: GOOGLE_APPLICATION_CREDENTIALS=/home/user/.calrag/service-account-key.json
GOOGLE_APPLICATION_CREDENTIALS=

# Embedding backend: "sentence" (default) or "openai"
EMBEDDING_BACKEND=sentence

# Sentence transformers model (when using sentence backend)
SENTENCE_MODEL=all-MiniLM-L6-v2

# OpenAI embeddings model (when using openai backend)
OPENAI_EMBED_MODEL=text-embedding-3-large
